{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/server/index.js"
        }
    ],
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "client/dist/assets/$1"
        },
        {
            "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|json|woff|woff2|ttf|eot))",
            "dest": "client/dist/$1"
        },
        {
            "src": "/(.*)",
            "dest": "client/dist/index.html"
        }
    ]
}